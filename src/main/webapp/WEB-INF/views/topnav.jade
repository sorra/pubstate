nav#topnav.navbar.navbar-default.navbar-inverse(role="navigation")
  #topnav-content.container-fluid
    .navbar-header
      button.navbar-toggle(type="button", data-toggle="collapse", data-target="#topnav-collapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.nav-brand(href="/") PubState
    #topnav-collapse.navbar-collapse.collapse
      ul.topnav-links.nav.navbar-nav.navbar-right
        li
          form#search(action="/search", method="get", accept-charset="UTF-8")
            input(name="q", type="text", place-holder="Search")
            button.glyphicon.glyphicon-search(type="submit")
        li
          a#topnav-tags(href="javascript:;") Tags
        li
          a(href="/articles") Articles
        li
          a.glyphicon.glyphicon-pencil(href="/articles/new", title="Write")
        if userSelf != null
          li
            a#topnav-userself(href="/users/self", title="My space")= userSelf.name
          li
            span.dropdown
              a#user_dropdown_menu.dropdown-toggle(href="javascript:;", data-toggle="dropdown", aria-haspopup="true", aria-expanded="true")
                span.glyphicon.glyphicon-cog(title="Menu")
              ul.dropdown-menu(aria-labelledby="user_dropdown_menu")
                li
                  a(href="/drafts") Drafts
                li
                  a(href="/trash") Trash
                li
                  a(href="/settings") Settings
                li
                  a(href="/logout") Logout
        else
          li
            a#topnav-login(href="/login") Login
          li
            a#topnav-signup(href="/signup") Signup
