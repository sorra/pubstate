extends layout.jade

block customHeader
  title Admin: Initialize

block mainContent
  if inited
    p All set!
    a(href="/") Return Home
  else
    form.auth_form(action="/manage/system/init", method="post")
        h3.heading Create admin account
        .input-group
          label(for="email") Email
          input#email(name="email", type="text")
        .input-group
          label(for="name") Name
          input#name(name="name", type="text")
        .input-group
          label(for="password") Password
          input#password(name="password", type="password")
        .input-group
          label(for="repeat_password") Repeat password
          input#repeat_password(name="repeatPassword", type="password")
        .auth_acts.input-group
          button.btn.btn-block.btn-lg.btn-danger(type="submit")
            span.small-circle
              i.fa.fa-caret-right
            small Create
